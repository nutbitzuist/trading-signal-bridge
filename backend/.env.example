# Application
APP_NAME="Trading Signal Bridge"
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/signal_bridge
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_SIGNAL_EXPIRE_SECONDS=60

# JWT Authentication
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12
API_KEY_LENGTH=64
WEBHOOK_SECRET_LENGTH=64

# Rate Limiting
WEBHOOK_RATE_LIMIT=100
EA_POLL_RATE_LIMIT=60

# Signal Settings
SIGNAL_EXPIRY_SECONDS=60
MAX_PENDING_SIGNALS_PER_ACCOUNT=50

# CORS (JSON array format)
CORS_ORIGINS=["http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
